<h1>Faculty List</h1>
<div class="row">
   <a class="btn" href="/faculty/add">Add faculty</a>
</div>
<table>
   <tr>
      <th>Faculty name</th>
      <th>Faculty description</th>
      {{#if admin}}
      <th>Menu</th>
      {{/if}}
   </tr>
   {{#each facultyList }}
   <tr>
      <td>
         <a href="/faculty/detail/{{_id}}">
            {{ name }}
         </a>
      </td>
      <td>{{ description }}</td>
      {{#if admin}}
      <td>
         <a class="btn orange" href="/faculty/edit/{{_id}}">Edit</a>
         <a class="btn brown" href="/faculty/delete/{{_id}}"
            onclick="return confirm('Do you want to delete this category ?')" ;>Delete</a>
      </td>
      {{/if}}
   </tr>
   {{/each}}
</table>